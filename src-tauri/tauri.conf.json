{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "law",
    "version": "0.0.1",
    "identifier": "com.law.app",
    "build": {"frontendDist": "../src"},
    "app": {
        "security": {
            "csp": null,
            "dangerousDisableAssetCspModification": true,
            "assetProtocol": {
                "enable": true,
                "scope": {
                    "allow": ["**/*"],
                    "requireLiteralLeadingDot": false
                }
            }
        },
        "withGlobalTauri": false
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "resources": ["./data/*"],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
